@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadê meu médico? - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <style>
        body {
            padding-top: 60px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <span class="navbar-brand">
                    @Html.ActionLink("Cadê meu médico?", "Index", "Home")
                </span>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li id="menuHome" class="active">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li id="menuMedicos">
                        @Html.ActionLink("Médicos", "Index", "Medico")
                    </li>
                    <li id="menuCidades">
                        @Html.ActionLink("Cidades", "Index", "Cidade")
                    </li>
                    <li id="menuEspecialidades">
                        @Html.ActionLink("Especialidades", "Index", "Especialidade")
                    </li>
                </ul>
            </div>

        </div>
    </div>

    <div class="container">
        @RenderBody();
    </div>

    <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")"></script>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    @RenderSection("script", required: false);

</body>
</html>
